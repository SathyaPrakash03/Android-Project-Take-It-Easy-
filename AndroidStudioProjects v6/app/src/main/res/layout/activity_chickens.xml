<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/food2"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background= "@drawable/chicken" />

    <TextView
        android:id="@+id/food1desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/food2"
        android:textColor="#000000"
        android:text="  With 3 flavors"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Chickens"
            android:textColor="#000000"
            android:textSize="30dp"
            android:id="@+id/food2name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:textSize="30dp"
            android:text="$7"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:id="@+id/chickenbuttonminus" />
        <EditText
            android:id="@+id/chickensnumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/chickenbuttonminus"
            android:layout_toRightOf="@+id/chickenbuttonminus"
            android:text="0"
            android:numeric="integer" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/chickensnumber"
            android:layout_toRightOf="@+id/chickensnumber"
            android:id="@+id/chickenbuttonplus"
            android:text="+"
            android:textSize="20dp"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="order"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:id="@+id/orderochickens"/>

</LinearLayout>