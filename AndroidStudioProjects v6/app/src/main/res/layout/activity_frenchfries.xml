<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/food3"
        android:layout_width="match_parent"
        android:layout_height="280dp"
       android:background="@drawable/perfectfrenchfries"
        />

    <TextView
        android:id="@+id/food3desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/food3"
        android:text="  Made of real tomato!."
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  French Fries"
            android:textSize="30dp"
            android:textColor="#000000"
            android:id="@+id/food3name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30dp"
            android:text="$2.5"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:textColor="#000000"
            android:id="@+id/frebuttonminus" />
        <EditText
            android:id="@+id/frenchfriesnumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/frebuttonminus"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/frebuttonminus"
            android:text="0"
            android:numeric="integer" />

        <Button
            android:layout_width="80dp"
            android:textColor="#000000"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/frenchfriesnumber"
            android:layout_toRightOf="@+id/frenchfriesnumber"
            android:id="@+id/frebuttonplus"
            android:text="+"
            android:textSize="20dp"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="order"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:id="@+id/orderfrenchfries"/>

</LinearLayout>