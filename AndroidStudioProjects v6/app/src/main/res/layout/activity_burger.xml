<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/food1"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:background="@drawable/burger1" />

    <TextView
        android:id="@+id/food1desc"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/food1"
        android:text="  A vegetable burger, with onion,potato and cheses."
        android:textColor="#000000"
        android:textSize="15dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Burger"
            android:textColor="#000000"
            android:textSize="30dp"
            android:id="@+id/food1name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="$5"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:id="@+id/burgerbuttonminus"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="-"

            android:textSize="25dp" />
        <EditText
            android:id="@+id/burgersnumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/burgerbuttonminus"
            android:layout_toRightOf="@+id/burgerbuttonminus"
            android:text="0"
            android:numeric="integer" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/burgersnumber"
            android:layout_toRightOf="@+id/burgersnumber"
            android:id="@+id/burgerbuttonplus"
            android:text="+"
            android:textSize="25dp"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="order"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:id="@+id/orderburgers"/>

</LinearLayout>