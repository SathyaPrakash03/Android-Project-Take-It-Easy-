<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/food4"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:background= "@drawable/onion" />

    <TextView
        android:id="@+id/food4desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/food4"
        android:text="  Organic Onion just."
        android:textColor="#000000"
        android:textSize="15dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Onion"
            android:textSize="30dp"
            android:textColor="#000000"
            android:id="@+id/food4name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:text="$3.5"
            android:textSize="30dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:id="@+id/onionbuttonminus" />
        <EditText
            android:id="@+id/onionnumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/onionbuttonminus"
            android:layout_toRightOf="@+id/onionbuttonminus"
            android:text="0"
            android:numeric="integer" />
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/onionnumber"
            android:layout_toRightOf="@+id/onionnumber"
            android:id="@+id/onionbuttonplus"
            android:text="+"
            android:textSize="20dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/orderonion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:text="order" />



</LinearLayout>
